{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

    <h1>{{ page_heading }}</h1>

    <form action="{{ path('app_account_info') }}" method="post" id="accountForm">

        <div>
            <label for="first_name">First Name</label>
            <input type="text"
                   id="first_name"
                   name="first_name"
                   value="{{ usr.first_name}}">
        </div>
        <div>
            <label for="last_name">Last Name</label>
            <input type="text"
                   id="last_name"
                   name="last_name"
                   value="{{ usr.last_name}}">
        </div>
        <div>
            <label for="address">Your Address</label>
            <input type="text"
                   id="address"
                   name="address"
                   value="{{ usr.address}}">
        </div>
        <div>
            <label for="birth_date">Your Date od Birth</label>
            <input type="text"
                   id="birth_date"
                   name="birth_date"
                   value="{{ usr.birth_date|date('m/d/Y') }}"
                   placeholder="mm/dd/YYYY">
        </div>
        <div>
            <label for="about">About Yourself</label>
            <textarea name="about" id="about">{{ usr.about}}</textarea>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">Update</button>
    </form>

    <div class="ajaxResponce">
    </div>

    <div style="margin-top: 50px;">
        <a href="{{ path('app_home') }}">Home Page</a>
    </div>
    <div style="margin-top: 10px;">
        <a href="{{ path('app_logout') }}">Logout</a>
    </div>

{% endblock %}
